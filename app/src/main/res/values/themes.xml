<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AuthorizationApp" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.AuthorizationApp.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/teal_200</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an animated drawable.
        One of these is required.-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen.-->
        <item name="postSplashScreenTheme">@style/Theme.AuthorizationApp</item>
    </style>
</resources>